
@{
    ViewBag.Title = "ExamSchedule";
    Layout = "~/Views/Shared/ExamControllerLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>

    <title>CreateExam</title>

    <style>
        .submit-btn {
            width: 100%;
        }

        .multiselect-container {
            width: 100% !important;
        }
    </style>

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-primary">
                    <div class="panel-heading"><center><b>Create Exam Schedule</b></center></div>
                    <div class="panel-body">
                    
                        <form action="AddExamSchedule" method="post">
                            <input type="text" name ="Schedule_Id" value="@Model.Schedule_Id" hidden/>

                            <label>Exam Id</label>
                            <input type="text" name ="Exam_Id" value="@Model.Exam_Id" class="form-control" readonly/>

                            <label>Time From</label>
                            <input type="datetime-local" name="Time_From" value="@Model.Time_From" class="form-control"/>

                            <label>Time To</label>
                            <input type="datetime-local" name="Time_To" value="@Model.Time_To" class="form-control" />

                            <label>Room</label>
                            <select id="room" name="Room_Id" class="form-control">
                                <option value="@Model.Room_Id" selected>@Model.Room_Id</option>
                            </select><br>

                            <input type="submit" class="btn btn-primary submit-btn" value="Add" />
                        </form>

                    </div>
                </div>
                <center><a href="/ExamController/Index">Go Back</a></center>
            </div>
        </div>
    </div>
</body>
</html>
