            $.ajax({
                type: "POST",
                url: "/ExamController/AjaxMethodForRoom",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    len = response.length;
                    if (len == 0) {
                        $("#room").html('<option disabled selected>-There are no Rooms in DB-</option>');
                    }
                    else {
                        $("#room").html('<option disabled selected>-Select a Room-</option>');
                        for (var i = 0; i < len; i++) {
                            if (roomId == response[i].Room_Id)
                                $("#room").append(new Option("Room Number: " + response[i].Room_Id + ", Room Capacity: " + response[i].Room_Capacity, response[i].Room_Id, true , true));
                            else
                                $("#room").append(new Option("Room Number: " + response[i].Room_Id + ", Room Capacity: " + response[i].Room_Capacity, response[i].Room_Id));
                        }
                    }
                },
                error: function (response) {
                }
            });

        });


