@model FYP.Models.User

<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<html>
<head>
    <title>Admin Login</title>
    <style>
        body {
            margin: 0px;
            padding: 0px;
        }

        h2:hover {
            color: #1A5276;
        }

        h5:hover {
            color: #1A5276;
        }
    </style>
</head>
<body>
    <a href="/home/index" class="navbar-brand" style="text-decoration: none; color: #2E86C1;"><h2>ONLINE EXAMINATION SYSTEM</h2></a>
    <br><br><br>
    <hr>
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <h2 style="text-align: center; color: #2E86C1; ">Sign In to continue...</h2>
                <hr style="padding: 0px; border: 1px solid #3CCAE6;">
                <h4 class="alert-danger" style="text-align:center; border-radius:4px;">@ViewBag.Message</h4>
                <div class="row" style="padding:0px;">
                    <div class="col-md-12">
                        @using(Html.BeginForm(FormMethod.Post))
                        {
                            <div class="well">
                                <div class="form-group">
                                    @Html.Label("User Id", new { @style = "line-height:30px"})
                                    @Html.TextBoxFor(a =>a.User_Id, new { @class = "form-control"})
                                    @Html.ValidationMessageFor(a => a.User_Id)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(a => a.Password, new { @style = "line-height:30px" })
                                    @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(a => a.Password)
                                </div>
                                <input type="submit" value="login" class="btn btn-primary" style="width:100%;">
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</body>
</html>