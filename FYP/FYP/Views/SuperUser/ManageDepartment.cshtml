@{
    ViewBag.Title = "ManageDepartment";
    Layout = "~/Views/Shared/SuperUserLayout.cshtml";
}

<style>
    hr {
        border: 1px solid #3CCAE6;
    }

    a.my_class {
        color: white;
    }
</style>
<body>
    <div class="container" style="border: none; padding: 0px; border-radius: 4px;">
        <h3><b>Manage Departments</b></h3>
        <hr>

        <button type="button" class="btn btn-primary" style="width:100%;" onclick="location.href='@Url.Action("AddDepartment", "SuperUser",null)'"><span class="glyphicon glyphicon-plus-sign"></span> Add Department</button>

        <div class="container" style="border: 1px solid silver; padding: 0px; border-radius: 4px;">
            <div class="container-fluid" style="background-color: #F4F4F4; padding: 12px; border-radius: 4px;"><span class="glyphicon glyphicon-edit"></span> Departments List</div>
            <br>
            <div class="container table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="height: 30px; width: 600px; text-align: center; font-size: 15px;">&nbsp;&nbsp;Department Name</th>
                        </tr>
                    </thead>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td style="height: 40px; width: 600px; text-align: center; font-size: 13px;">&nbsp;&nbsp;<b>@s.Department_Id</b></td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</body>
