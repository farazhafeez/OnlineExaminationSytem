@{
    ViewBag.Title = "ManageTeacher";
    Layout = "~/Views/Shared/SuperUserLayout.cshtml";
}

<style>
    hr {
        border: 1px solid #3CCAE6;
    }

    a.my_class {
        color: white;
    }
</style>
<body>
    <div class="container" style="border: none; padding: 0px; border-radius: 4px;">
        <h3><b>Manage Teachers</b></h3>
        <hr>

        <button type="button" class="btn btn-primary" style="width:100%;" onclick="location.href='@Url.Action("AddTeacher", "SuperUser",null)'"><span class="glyphicon glyphicon-plus-sign"></span> Add Teacher</button>
        
        <div class="container" style="border: 1px solid silver; padding: 0px; border-radius: 4px;">
            <div class="container-fluid" style="background-color: #F4F4F4; padding: 12px; border-radius: 4px;"><span class="glyphicon glyphicon-edit"></span> Teachers List</div>
            <br>
            <div class="container table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="height: 30px; width: 600px; text-align: center; font-size: 15px;">&nbsp;&nbsp;Teacher ID</th>
                            <th style="height: 30px; width: 600px; text-align: center; font-size: 15px;">&nbsp;&nbsp;Teacher Name</th>
                            <th style="height: 30px; width: 600px; text-align: center; font-size: 15px;">&nbsp;&nbsp;Department</th>
                            <th style="height: 30px; width: 600px; text-align: center; font-size: 15px;">&nbsp;&nbsp;Contact No</th>
                            <th style="height: 30px; width: 800px; text-align: center; font-size: 15px;">&nbsp;&nbsp;Action</th>
                        </tr>
                    </thead>
                    @foreach (var s in Model)
                    {
                        <tr id="tr_@s.User_Id">
                            <td style="height: 40px; width: 600px; text-align: center; font-size: 13px;">&nbsp;&nbsp;<b>@s.User_Id</b></td>
                            <td style="height: 40px; width: 600px; text-align: center; font-size: 13px;">&nbsp;&nbsp;<b>@s.First_Name @s.Last_Name</b></td>
                            <td style="height: 40px; width: 600px; text-align: center; font-size: 13px;">&nbsp;&nbsp;<b>@s.Department_Id</b></td>
                            <td style="height: 40px; width: 600px; text-align: center; font-size: 13px;">&nbsp;&nbsp;<b>@s.Contact_No</b></td>
                            <td style="height: 40px; width: 920px; text-align: center; font-size: 13px;">

                                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("EditTeacher","SuperUser", new {User_Id=@s.User_Id},null)'">
                                    <span class="glyphicon glyphicon-cog"></span> Edit
                                </button>

                                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ShowTeacherSubjects","SuperUser", new {User_Id=@s.User_Id},null)'">
                                    <span class="glyphicon glyphicon-book"></span> Subjects
                                </button>

                                <button type="button" class="btn btn-danger" id="@s.User_Id">
                                    <span class="glyphicon glyphicon-ban-circle"></span> Deactivate
                                </button>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</body>

<script>
    $(function () {
        $("tr button:nth-child(3)").click(function () {
            var btnValue = this.id;
            $.ajax({
                type: "POST",
                url: "/SuperUser/AjaxMethodForDeactivatingUser",
                data: JSON.stringify({ User_Id: btnValue }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    $("#tr_" + btnValue).remove();
                },
                error: function (response) {
                    alert("error");
                }
            });
        });
    });
</script>